# Production Docker Environment Configuration
# Use this for production deployments with Docker/Kubernetes

# Environment
ENVIRONMENT=production
APP_VERSION=1.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_ENABLE_DOCS=false
API_KEY_REQUIRED=true

# CORS Configuration (restrict to your domains)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Redis Configuration (use external Redis service)
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=100

# Model Configuration
MODEL_PATH=/app/models
MODEL_FALLBACK_MODE=true
MODEL_INFERENCE_TIMEOUT=5.0

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE_PATH=/app/logs/fraud_detection.log
ENABLE_DETAILED_LOGGING=true

# Security Configuration
RATE_LIMIT_PER_MINUTE=500
SECURE_HEADERS=true

# Monitoring Configuration
ENABLE_PROMETHEUS=true
SLOW_REQUEST_THRESHOLD=0.05
